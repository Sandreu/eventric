document
html(ng-app='EventricDocs' lang='en')
head
    meta(charset='UTF-8')
    title Eventric Documentation
    link(href='/styles/vendor.css', rel='stylesheet')
    link(href='/styles/application.css', rel='stylesheet')

    script(src='/scripts/eventric.js')
    script(src='/scripts/vendor.js')
    script(src='/scripts/pages-data.js')
  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/.")
            img(src="http://eventricjs.org/images/eventric.png", width="25")
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-left
            li
              a(ui-sref="home()") Home
            li
              a(ui-sref="api()") API
            li
              a(href="http://sixsteps.ghost.io/", target="_blank") Blog
    .container-fluid(ng-controller="ApplicationCtrl")
      .row
        div(ui-view="" autoscroll="false")
    script(type='text/javascript', src='/scripts/application.js')
    script(type='text/javascript').
      require('eventric');
      window.$ = window.jQuery = require('jquery');
      require('angularjs');
      require('angular-ui-router');
      require('bootstrap');
      require('eventric/docs/app/src/application');






